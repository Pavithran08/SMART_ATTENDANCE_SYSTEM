<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".DisplayDetailActivity">

    <!-- App Title (Consistent with other screens) -->
<TextView
android:id="@+id/appTitleDetails"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Smart Attendance"
android:textColor="@color/title_text_color"
android:textSize="32sp"
android:textStyle="bold"
android:layout_marginTop="64dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <!-- Class Details Card View -->
<androidx.cardview.widget.CardView
android:id="@+id/detailsCard"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"
android:layout_marginTop="48dp"
android:layout_marginBottom="24dp"
app:cardCornerRadius="20dp"
app:cardElevation="12dp"
app:cardBackgroundColor="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/appTitleDetails"
app:layout_constraintBottom_toTopOf="@id/btn_next"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintVertical_chainStyle="packed"
app:layout_constraintVertical_bias="0.4">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:ignore="MissingConstraints">

    <!-- Header Text: Confirmation of Selections -->
    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLASS DETAIL"
        android:textColor="@color/title_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Faculty Detail -->
    <TextView
        android:id="@+id/facultyDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty: Dr. Amal Hassan"
        android:textColor="@color/secondary_text_color"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <!-- Section Detail -->
    <TextView
        android:id="@+id/sectionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section: A"
        android:textColor="@color/secondary_text_color"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <!-- Time Detail -->
    <TextView
        android:id="@+id/timeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 10:00 AM"
        android:textColor="@color/secondary_text_color"
        android:textSize="18sp"
        android:layout_marginBottom="0dp" /> <!-- Removed bottom margin for last item in card -->

</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Next Button to Proceed -->
<Button
android:id="@+id/btn_next"
android:layout_width="0dp"
android:layout_height="56dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:text="Next"
    android:textColor="@android:color/white"
    android:background="@drawable/button_gradient_bg"
    android:textSize="18sp"
    android:textStyle="bold"
    android:stateListAnimator="@null"
    app:layout_constraintTop_toBottomOf="@id/detailsCard"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
