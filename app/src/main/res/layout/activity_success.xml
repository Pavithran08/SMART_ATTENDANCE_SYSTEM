<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".SuccessActivity">

    <!-- App Title (Consistent with other screens) -->
<TextView
android:id="@+id/successScreenAppTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Smart Attendance"
android:textColor="@color/title_text_color"
android:textSize="32sp"
android:textStyle="bold"
android:layout_marginTop="64dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <!-- Success Card View -->
<androidx.cardview.widget.CardView
android:id="@+id/successCard"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"
android:layout_marginTop="48dp"
android:layout_marginBottom="48dp"
app:cardCornerRadius="20dp"
app:cardElevation="12dp"
app:cardBackgroundColor="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/successScreenAppTitle"
app:layout_constraintBottom_toTopOf="@id/btn_go_to_login"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:ignore="MissingConstraints">

    <!-- Success Icon (Checkmark) -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle_green"
        android:contentDescription="Success Icon"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circular_image_bg"
    android:padding="16dp" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User has been registered successfully!"
        android:textColor="@color/secondary_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Sub Message (Optional, for more detail) -->
    <TextView
        android:id="@+id/success_sub_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You can now log in with your new credentials."
        android:textColor="@color/secondary_text_color"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Button to Navigate to Login -->
<Button
android:id="@+id/btn_go_to_login"
android:layout_width="0dp"
android:layout_height="56dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:text="Go to Login"
    android:textColor="@android:color/white"
    android:background="@drawable/button_gradient_bg"
    android:textSize="18sp"
    android:textStyle="bold"
    android:stateListAnimator="@null"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/successCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
