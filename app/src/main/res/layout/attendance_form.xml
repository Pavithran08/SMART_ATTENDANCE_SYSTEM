<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".AttendanceActivity">

    <TextView
        android:id="@+id/attendanceAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance Form"
        android:textColor="@color/title_text_color"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/attendanceCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/attendanceAppTitle"
        app:layout_constraintBottom_toTopOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/qrFacultyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty: N/A"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/qrCourseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course: N/A"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/qrSectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section: N/A"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/qrTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: N/A"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />
                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Enter Name"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColorHint="@color/text_hint_light"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/matricLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matric Number"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/matricField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Enter Matric Number"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColorHint="@color/text_hint_light"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/programLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/programField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Enter Program"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColorHint="@color/text_hint_light"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:inputType="text"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/getLocationButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Get Current Location"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_gradient_bg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: Not available"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="Submit Attendance"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_bg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/attendanceCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>