<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".VerificationSuccessActivity">

    <!-- App Title (Consistent with other screens) -->
<TextView
android:id="@+id/verificationSuccessAppTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Smart Attendance"
android:textColor="@color/title_text_color"
android:textSize="32sp"
android:textStyle="bold"
android:layout_marginTop="64dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <!-- Success Card View -->
<androidx.cardview.widget.CardView
android:id="@+id/verificationSuccessCard"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"
android:layout_marginTop="48dp"
app:cardCornerRadius="20dp"
app:cardElevation="12dp"
app:cardBackgroundColor="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/verificationSuccessAppTitle"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintVertical_bias="0.3"> <!-- Adjust vertical bias to center the card -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:ignore="MissingConstraints">

    <!-- Success Icon (Checkmark) -->
    <ImageView
        android:id="@+id/img_success_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle_green"
    android:contentDescription="Success Icon"
    android:layout_marginBottom="24dp"
        android:background="@drawable/circular_image_bg"
    android:padding="16dp" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/txt_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Face Verification Successful!"
        android:textColor="@color/secondary_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Sub Message (Optional, for more detail) -->
    <TextView
        android:id="@+id/txt_success_sub_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Redirecting to your dashboard..."
        android:textColor="@color/secondary_text_color"
        android:textSize="16sp" />

</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Optional: Progress Bar if redirection isn't instant -->
<ProgressBar
android:id="@+id/progress_bar_redirect"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="24dp"
android:visibility="visible"
app:layout_constraintTop_toBottomOf="@id/verificationSuccessCard"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
