<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/studentProfileAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Profile"
        android:textColor="@color/title_text_color"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4" />

    <ImageButton
        android:id="@+id/btn_logout_corner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Logout"
        android:src="@drawable/ic_logout"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/studentProfileHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/studentProfileAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/studentProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_default"
                android:background="@drawable/circular_image_bg"
                android:contentDescription="Student Profile Image" />

            <TextView
                android:id="@+id/studentUsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="20sp"
                android:textColor="@color/title_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/studentMatricOrEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B0001 / student@example.com"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/studentProfileDetailsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/studentProfileHeaderCard"
        app:layout_constraintBottom_toTopOf="@id/btn_update_student_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/studentNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/studentNameField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:hint="Enter Name"
                    android:textColorHint="@color/text_hint_light"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/studentMatricLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matric Number"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/studentMatricField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:hint="Enter Matric Number"
                    android:textColorHint="@color/text_hint_light"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/studentEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/studentEmailField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:hint="Enter Email"
                    android:textColorHint="@color/text_hint_light"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/studentPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/studentPasswordField"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/text_hint_light"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_update_student_profile"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="16dp"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_bg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/studentProfileDetailsCard"
        app:layout_constraintBottom_toTopOf="@id/btn_capture_login_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_capture_login_face"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="Capture / Update Login Face"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_bg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/btn_update_student_profile"
        app:layout_constraintBottom_toTopOf="@id/studentProfileNavigationButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/studentProfileNavigationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/studentProfileBackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            android:padding="8dp"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/studentProfileHomeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:src="@drawable/ic_home"
            android:padding="8dp"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/studentProfileProfileButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile"
            android:padding="8dp"
            app:tint="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>