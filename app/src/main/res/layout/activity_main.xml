<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_main"
    tools:context=".MainActivity">

    <!-- App Title / Tagline (Optional, to match other screens) -->
<TextView
android:id="@+id/mainAppTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Smart Attendance System"
android:textColor="@color/title_text_color"
android:textSize="36sp"
android:textStyle="bold"
android:layout_marginTop="80dp"
android:gravity="center"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />


<ImageView
android:id="@+id/logo_image"
android:layout_width="160dp"
android:layout_height="160dp"
android:contentDescription="@string/logo"
android:src="@drawable/ic_logo"
    android:layout_marginTop="48dp"
    android:layout_marginBottom="48dp"
    app:layout_constraintTop_toBottomOf="@id/mainAppTitle"
    app:layout_constraintBottom_toTopOf="@+id/btn_login"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

    <!-- Login Button -->
<Button
android:id="@+id/btn_login"
android:layout_width="0dp"
android:layout_height="56dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/button_gradient_bg"
    android:text="Login"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:textStyle="bold"
    android:stateListAnimator="@null"
    app:layout_constraintBottom_toTopOf="@+id/btn_register"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <!-- Register Button -->
<Button
android:id="@+id/btn_register"
android:layout_width="0dp"
android:layout_height="56dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:background="@drawable/button_gradient_bg"
    android:text="Register"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:textStyle="bold"
    android:stateListAnimator="@null"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_login"
    android:layout_marginBottom="80dp" /> <!-- Adjusted bottom margin -->

    </androidx.constraintlayout.widget.ConstraintLayout>
