<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Slightly more rounded -->
            <solid android:color="@color/input_background_light" />
            <stroke android:width="2dp" android:color="@color/blue_color" /> <!-- Accent color on focus -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Slightly more rounded -->
            <solid android:color="@color/input_background_light" />
            <stroke android:width="1dp" android:color="@color/input_border_light" />
        </shape>
    </item>
</selector>